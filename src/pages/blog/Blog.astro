---
const allPosts = await Astro.glob('./posts/*.md');
const sortedPosts = allPosts.sort((a, b) => Math.floor(new Date(b.frontmatter.date).getTime() / 1000) - Math.floor(new Date(a.frontmatter.date).getTime() / 1000));
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Blog">
    <ul class="text-xl">
        {sortedPosts.map((post) => (
        <li class="my-4">
            <a href={post.url}>{post.frontmatter.title}</a>
        </li>
        ))}
    </ul>
</Layout>
