---
// No in images, because are processed client side with JS.
import faviconLight from '../../public/favicon-light.png';
import faviconDark from '../../public/favicon-dark.png';
---

<script src="../scripts/theme.js"></script>
<script define:vars={{ faviconLight, faviconDark }}>
    // Executed client side, before must be the theme.js execution.
    document.addEventListener('DOMContentLoaded', (event) => {
        window.darkModePath = faviconDark.src;
        window.lightModePath = faviconLight.src;

        if (window.currentTheme()) {
            window.darkModeFunction();
        } else {
            window.lightModeFunction();
        }
    });
</script>

<script src="../scripts/footer.js"></script>

<script>
    import { navigate } from 'astro:transitions/client';
    window.astroNavigate = navigate;
</script>
