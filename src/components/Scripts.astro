---
// Should stay here (in public/ not src/images/) to not get error in JS console.
import faviconLight from '../../public/favicon-light.png';
import faviconDark from '../../public/favicon-dark.png';
---

<script>
    import '../scripts/theme.js'
</script>
<script define:vars={{ faviconLight, faviconDark }}>
    // Executed client side, before must be the theme.js import and execution.
    document.addEventListener('DOMContentLoaded', (event) => {
        window.darkModePath = faviconDark.src;
        window.lightModePath = faviconLight.src;

        if (window.currentTheme()) {
            window.darkModeFunction();
        } else {
            window.lightModeFunction();
        }
    });
</script>

<script>
    import '../scripts/typeeffectfooter.js'
    import '../scripts/envelopecaptcha.js'
</script>

<script src="https://kit.fontawesome.com/4264fd6038.js" crossorigin="anonymous">
</script>

